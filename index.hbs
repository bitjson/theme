{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">

    <nav class="main-nav overlay clearfix">
      <div class="main-header-content inner">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
        {{#if @blog.navigation}}
          <div class="menu-button">Menu</div>
        {{/if}}
      </div>
    </nav>

    <div class="vertical">
        <div class="inner">
            <h1 class="page-title">{{@blog.title}}</h1>
            {{#if @blog.description}}
              <div class="page-subtitle ">{{@blog.description}}</div>
            {{/if}}
            </style>
            <div id="mc_signup">
            <form>
              <a href="http://eepurl.com/NPjwH" target="_blank" class="cta-button">Subscribe to Blog Updates</a>
            </form>
            </div>
        </div>
    </div>

</header>



<div class="inner">
  <div class="row">
      <main id="content" class="content large-9 columns" role="main">
      {{> "loop"}}
      </main>
      <div class="large-3 columns" style="border-left: 1px solid #f2f2f2;">
        {{> "sidebar"}}
      </div>
  </div>
</div>


