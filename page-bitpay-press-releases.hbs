{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}

{{! Everything inside the #post tags pulls data from the page }}
{{#post}}

    <header class="press main-header post-head {{#if img_url}}" style="background-image: url({{img_url}}){{else}}no-cover{{/if}}">
        <nav class="press main-nav {{#if img_url}}overlay{{/if}} clearfix">
            {{#if @blog.logo}}<a class="press blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
            {{navigation}}
        </nav>
    </header>

    <div class="press column">
        <main class="press content" role="main">
            <article class="press {{post_class}}">

                    <header class="press post-header">
                        <h1 class="press post-title">{{title}}</h1>
                    </header>

                    <section class="press">
                        {{content}}
                    </section>
            </article>
        </main>
    </div>
{{/post}}
